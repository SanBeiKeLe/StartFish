<?xml version="1.0" encoding="utf-8"?>
<com.starfish.widget.view.ButtonNavigationView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" android:contentDescription="TODO"  />

  
    <RadioButton
        android:id="@+id/main_button_tab_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:button="@null"
        android:gravity="center"
        android:drawableTop="@mipmap/ic_launcher_round"
        android:drawableTint="@color/bottom_navation_icon_selector"
        android:text="@string/main_text_tab_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/main_button_tab_proguard"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RadioButton
        android:id="@+id/main_button_tab_proguard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:drawableTint="@color/bottom_navation_icon_selector"
        android:drawableTop="@mipmap/ic_launcher"
        android:gravity="center"
        android:text="@string/main_text_tab_proguard"
        app:layout_constraintEnd_toStartOf="@+id/main_button_tab_question"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/main_button_tab_home"
        app:layout_constraintTop_toTopOf="@+id/main_button_tab_home" />

    <RadioButton
        android:id="@+id/main_button_tab_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:drawableTint="@color/bottom_navation_icon_selector"
        android:drawableTop="@mipmap/ic_launcher"
        android:gravity="center"
        android:text="@string/main_text_tab_question"
        app:layout_constraintEnd_toStartOf="@+id/main_button_tab_myself"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/main_button_tab_proguard"
        app:layout_constraintTop_toTopOf="@+id/main_button_tab_proguard" />

    <RadioButton
        android:id="@+id/main_button_tab_myself"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:button="@null"
        android:drawableTop="@mipmap/ic_launcher"
        android:drawableTint="@color/bottom_navation_icon_selector"
        android:gravity="center"
        android:text="@string/main_text_tab_myself"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/main_button_tab_question"
        app:layout_constraintTop_toTopOf="@+id/main_button_tab_question" />


</com.starfish.widget.view.ButtonNavigationView>